<div class="container">
	<div class='row'>
		<h1>Your Gold: <%= @total_gold %></h1>

	</div>


	<div class='row'>
		<div class='col-md-3 text-center'>
			<h3>Farm</h3>
			<p>(Earns 10-20 golds)</p>

			<form action='/farm' method='post'>
				<input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">
				<button class='btn btn-default'>Find Gold</button>
			</form>

		</div>


		<div class='col-md-3 text-center'>
			<h3>Cave</h3>
			<p>(Earns 5-10 golds)</p>
			<form action='/cave' method='post'>
				<input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">
				<button class='btn btn-default'>Find Gold</button>
			</form>

		</div>

	
		<div class='col-md-3 text-center'>
			<h3>House</h3>
			<p>(Earns 2-5 golds)</p>
			<form action='/house' method='post'>
				<input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">
				<button class='btn btn-default'>Find Gold</button>
			</form>

		</div>


		<div class='col-md-3 text-center'>
			<h3>Casino</h3>
			<p>(Earns/takes 0-50 golds)</p>
			<form action='/casino' method='post'>
				<input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">
				<button class='btn btn-default'>Find Gold</button>
			</form>

		</div>


	</div>

	<div class='row'>
		<h1>Activities</h1>

		<div class='col-md-12' style='border: 2px solid black; height: 200px; overflow: scroll'>

			<% @activities.each do |activity| %>

				<% if activity['status'] == true %>
					<p style='color:green'> <%= activity['sentence'] %> </p>
				<% else %>
					<p style='color:red'> <%= activity['sentence'] %> </p>
				<% end %>
			<% end %>

		</div>


</div>





































